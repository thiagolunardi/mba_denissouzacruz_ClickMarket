@model ClickMarket.AppMvc.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Exclusão";
}


<h3>Você tem certeza que deseja excluir a categoria @Model.Nome?</h3>
<hr />
<br />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-weight-normal" })
    </div>
}
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="col-md-offset-2 col-md-10" id="div-salvar-voltar">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>
